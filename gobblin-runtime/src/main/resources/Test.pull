job.name=ReqLogsIngestion
job.group=Applift-Kafka
job.description=Gobblin job to ingest req logs from Kafka to HDFS
job.lock.enabled=True
source.class=gobblin.applift.parquet.KafkaJsonSource
converter.classes=gobblin.applift.parquet.JsonToAvroConverter
#job.schedule=0 0/5 * * * ?
#job.runonce=False
#launcher.type=MAPREDUCE

# Thread pool settings for the task executor
taskexecutor.threadpool.size=10
taskretry.threadpool.coresize=4
taskretry.threadpool.maxsize=2

#Kafka related configuration
kafka.brokers=localhost:9092,localhost:9093,localhost:9094
topic.whitelist=reqlogs
kafka.schema.registry.url=http://localhost:2876/schema-repo
#mr.job.max.mappers=18
bootstrap.with.offset=earliest

# File system URIs
fs.uri=file:///
writer.fs.uri=${fs.uri}
state.store.fs.uri=${fs.uri}

# Writer related configuration properties
writer.destination.type=HDFS
writer.output.format=PARQUET
writer.staging.dir=/Users/prashantbhardwaj/gobblin-test/gobblin/task-staging
writer.output.dir=/Users/prashantbhardwaj/gobblin-test/gobblin/task-output
writer.builder.class=gobblin.applift.parquet.ParquetHdfsDataWriterBuilder
writer.partitioner.class=gobblin.applift.parquet.TimeBasedParquetWriterPartitioner
writer.partition.timezone=UTC
writer.partition.pattern=yyyyMMddHH
simple.writer.delimiter=\n

# Data publisher related configuration properties
data.publisher.type=gobblin.publisher.TimePartitionedDataPublisher
data.publisher.final.dir=/Users/prashantbhardwaj/gobblin-test/gobblinrawlogs
data.publisher.replace.final.dir=false

# Directory where job/task state files are stored
state.store.dir=/Users/prashantbhardwaj/gobblin-test/gobblin/state-store

# Directory where error files from the quality checkers are stored
qualitychecker.row.policies=gobblin.applift.parquet.AvroReqLogPolicy
qualitychecker.row.policy.types=ERR_FILE
qualitychecker.row.err.file=/Users/prashantbhardwaj/gobblin-test/gobblin/err

# Directory where job locks are stored
job.lock.dir=/Users/prashantbhardwaj/gobblin-test/gobblin/locks

# Directory where metrics log files are stored
metrics.reporting.file.enabled=true
metrics.log.dir=/Users/prashantbhardwaj/gobblin-test/gobblin/metrics

# Interval of task state reporting in milliseconds
task.status.reportintervalinms=5000

# MapReduce properties
mr.job.root.dir=/Users/prashantbhardwaj/gobblin-test/gobblin/working